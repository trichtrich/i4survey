<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="stem_header" inherit_id="website.layout" name="STEM Header">
            <xpath expr="//header" position="replace">
                <header class="navbar navbar-survey">
                    <div class="container-fluid">
                        <div class="navbar-header">
                            <a class="navbar-brand" href="/">
                                <img src="/i4survey/static/src/images/logo.png" class="img img-responsive"/>
                            </a>
                            <p class="navbar-text hidden-xs">
                                Cuộc cách mạng công nghiệp lần thứ 4<br/>
                                <span>Fourth Industrial Revolution</span>
                            </p>
                        </div>
                    </div>
                </header>
                <nav class="navbar site-navigation" id="navigation" role="navigation">
                    <div class="container">
                        <a class="menu-bar" data-toggle="collapse" href="#defaultNavbar1">
                            <span class="bars"></span>            
                        </a>
                        <div class="collapse nav-collapse" id="defaultNavbar1">
                            <ul class="nav navbar-nav navbar-right">
                                <li>
                                    <a class="text-trang hover" href="/">Trang chủ</a>
                                </li>
                                <li>
                                    <a class="bt-dangnhap MR10" t-attf-href="/i4survey">
                                        Tự đánh giá
                                    </a>
                                </li>
                                <li groups="base.group_public">
                                    <a class="bt-dangnhap MR10" t-attf-href="/web/login">
                                        Đăng nhập
                                    </a>
                                </li>
                            </ul>
                        </div> 
                    </div> 
                </nav>
            </xpath>
        </template>

        <template id="stem_footer" inherit_id="website.layout" name="STEM Footer">
            <xpath expr="//footer" position="replace">
            </xpath>
        </template>
    </data>
</odoo>
